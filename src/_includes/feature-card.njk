{% if item %}
  <div class="rounded-md px-4 py-2 border-dashed border-gray-100 border-2 min-h-20 md:h-24 bg-gray-50 hover:bg-gray-200">
    <div class="text-md">
        <a
         class="text-md no-underline text-black hover:bg-purple-100"
         href="/features/{{item.slug | slug}}"
         >
          {{ item.name }}
        </a>
      </div>
    <div class="text-md">({{item.latestPercentage}})</div>
    <div class="pt-1">
      {% for category in item.categories %}
        {% include "category-tag.njk" %}
      {% endfor %}
    </div>
  </div>
{% endif %}
